<apex:page standardController="Request_Box__c" extensions="RegistrationController">
<script>
    var shirtSize = "{!$CurrentPage.parameters.shirtSize}";
    var trouserLength = "{!$CurrentPage.parameters.trouserLength}";
    var waist = "{!$CurrentPage.parameters.waist}";
    var outfitType = "{!$CurrentPage.parameters.outfitType}";
    var pantShape = "{!$CurrentPage.parameters.pantShape}";
    var shirtShape = "{!$CurrentPage.parameters.shirtShape}";
    var accountName = "{!$CurrentPage.parameters.accountName}";
    var accountEmail = "{!$CurrentPage.parameters.accountEmail}";
    var accountPhone = "{!$CurrentPage.parameters.accountPhone}";
    var accountUsername = "{!$CurrentPage.parameters.accountUsername}";
    var accountPassword = "{!$CurrentPage.parameters.accountPassword}";
    function previousPage(){
        window.location.href = '/apex/OutfitDetails?shirtSize='+shirtSize+'&trouserLength='+trouserLength+'&waist='+waist+'&outfitType='+outfitType+'&pantShape='+pantShape+'&shirtShape='+shirtShape+'&accountName='+accountName+'&accountEmail='+accountEmail+'&accountPhone='+accountPhone+'&accountUsername='+accountUsername+'&accountPassword='+accountPassword;
    }
</script>
    <!--<c:importvisualstrap />
    <c:visualstrapblock >-->
        <apex:form >
            <apex:pageBlock >
            <apex:messages id="myMsg"/>
                <apex:pageBlockSection title="Enter Your Requirement" columns="1">
                    <apex:inputField value="{!requestBox.Trouser_Type__c}"/>
                    <apex:inputField value="{!requestBox.Shirt_Type__c}"/>
                    <apex:inputField value="{!requestBox.Accessories__c}"/>
                    <apex:inputField value="{!requestBox.Outwear__c}"/>
                    <apex:inputField value="{!requestBox.Date__c}"/>
                    <apex:inputField value="{!requestBox.Purpose__c}" />
                    <apex:inputField value="{!requestBox.Notes_and_Comments__c}" />
                </apex:pageBlockSection>
                <apex:commandButton value="Save" action="{!save}" style="float:right"/>
                <apex:commandButton value="Cancel" action="{!cancel}" style="float:right"/>
                <apex:commandButton value="Back" onclick="previousPage();" style="float:left" reRender="null"/>
            </apex:pageBlock>
        </apex:form>
    <!--</c:visualstrapblock>-->
</apex:page>