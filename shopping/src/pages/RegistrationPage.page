<apex:page standardController="Account">
<apex:includeScript value="{!URLFOR($Resource.jqueryCore)}"/>
<script>
    var accountName,accountEmail,accountPhone,accountUsername,accountPassword;
    function holdAccountDeatils(){
        accountName = document.getElementById('{!$Component.form.pageBlock.pageBlockSection.accountName}').value;
        accountEmail= document.getElementById('{!$Component.form.pageBlock.pageBlockSection.accountEmail}').value;
        accountPhone= document.getElementById('{!$Component.form.pageBlock.pageBlockSection.accountPhone}').value;
        accountUsername= document.getElementById('{!$Component.form.pageBlock.pageBlockSection.accountUsername}').value;
        accountPassword= document.getElementById('{!$Component.form.pageBlock.pageBlockSection.accountPassword}').value;
        window.location.href = '/apex/OutfitDetails?accountName='+accountName+'&accountEmail='+accountEmail+'&accountPhone='+accountPhone+'&accountUsername='+accountUsername+'&accountPassword='+accountPassword;
        //window.location.href = $.post("/apex/OutfitDetails",{accountName:accountName,accountEmail:accountEmail,accountPhone:accountPhone,accountUsername:accountUsername,accountPassword:accountPassword});
    }
    function previousPage(){
        window.location.href = '/apex/ShoppingPage';
    }
    window.onload=function()
    {
        document.getElementById('{!$Component.form.pageBlock.pageBlockSection.accountName}').value = "{!$CurrentPage.parameters.accountName}";
        document.getElementById('{!$Component.form.pageBlock.pageBlockSection.accountEmail}').value = "{!$CurrentPage.parameters.accountEmail}";
        document.getElementById('{!$Component.form.pageBlock.pageBlockSection.accountPhone}').value = "{!$CurrentPage.parameters.accountPhone}";
        document.getElementById('{!$Component.form.pageBlock.pageBlockSection.accountUsername}').value = "{!$CurrentPage.parameters.accountUsername}";
        document.getElementById('{!$Component.form.pageBlock.pageBlockSection.accountPassword}').value = "{!$CurrentPage.parameters.accountPassword}";
    };
    
</script>
    <!--<c:importvisualstrap />-->
    <apex:form id="form" >
        <!--<c:visualstrapblock >
        <c:panel >-->
            <apex:pageBlock id="pageBlock">
                <apex:pageBlockSection id="pageBlockSection" title="Enter User Account Information" columns="1">
                    <apex:inputField id="accountName" value="{!account.Name}"/>
                    <apex:inputField id="accountEmail" value="{!account.Email__c}"/>
                    <apex:inputField id="accountPhone" value="{!account.Phone}"/>
                    <apex:inputField id="accountUsername" value="{!account.Username__c}"/>
                    <apex:inputField id="accountPassword" value="{!account.Password__c}"/>
                </apex:pageBlockSection>
                <apex:commandButton value="Back"  onclick="previousPage();" style="float:left" reRender="null"/>            
                <apex:commandButton value="Next"  style="float:right" onclick="holdAccountDeatils();" reRender="null" />
                
            </apex:pageBlock>
            <!--</c:panel>
        </c:visualstrapblock>-->
    </apex:form>
</apex:page>