<apex:page standardController="Opportunity" sidebar="false" showHeader="false" extensions="EditOpportunityController" docType="html-5.0">
    <apex:form >
        <apex:pageBlock >
            <apex:pageMessages />
            <apex:pageBlockSection >
                Sub Opp Name<apex:inputText value="{!subOppName}"/>
                Sub Opp Type<apex:selectList value="{!subOppType}" size="1" >
                				<apex:selectOptions value="{!subOppTypeOptions}"/>
                			</apex:selectList>
                Stage<apex:selectList value="{!stageName}" size="1" >
                				<apex:selectOptions value="{!stageOptions}"/>
                		    </apex:selectList>
                Close Date<apex:input type="date" value="{!closeDate}" />
            </apex:pageBlockSection>
            <apex:pageBlockButtons >
                <apex:commandButton value="Save" action="{!save}" />
                <apex:commandButton value="Remove" action="{!remove}"/>
                <apex:commandButton value="Cancel" action="{!Cancel}"/>
            </apex:pageBlockButtons>
        </apex:pageBlock>
    </apex:form>
</apex:page>